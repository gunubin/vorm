{
  "name": "@gunubin/vorm-form",
  "version": "0.3.0",
  "description": "Field schemas, form validation, and output building for vorm",
  "keywords": [
    "form",
    "validation",
    "field-schema",
    "typescript"
  ],
  "license": "MIT",
  "author": "gunubin",
  "repository": {
    "type": "git",
    "url": "https://github.com/gunubin/vorm.git",
    "directory": "packages/form"
  },
  "homepage": "https://github.com/gunubin/vorm#readme",
  "bugs": {
    "url": "https://github.com/gunubin/vorm/issues"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@gunubin/vorm-core": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vitest": "^3.0.5"
  }
}
