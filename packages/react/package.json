{
  "name": "@vorm/react",
  "version": "0.1.0",
  "description": "VO-first React form hooks with per-field subscriptions via useSyncExternalStore",
  "keywords": ["form", "react", "hooks", "validation", "branded-types", "typescript"],
  "license": "MIT",
  "author": "gunubin",
  "repository": {
    "type": "git",
    "url": "https://github.com/gunubin/vorm.git",
    "directory": "packages/react"
  },
  "homepage": "https://github.com/gunubin/vorm#readme",
  "bugs": {
    "url": "https://github.com/gunubin/vorm/issues"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@vorm/core": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.5"
  }
}
